{
  "format_version": "1.21.60",
  "particle_effect": {
    "components": {
      "minecraft:emitter_lifetime_expression": {
        "activation_expression": 1,
        "expiration_expression": 0
      },
      "minecraft:emitter_rate_manual": {
        "max_particles": 12 // small increase for a fuller puddle effect
      },
      "minecraft:emitter_shape_point": {
        "offset": [0.0, 0.38, 0.0] // lowered slightly for surface realism
      },
      "minecraft:particle_appearance_billboard": {
        "facing_camera_mode": "emitter_transform_xz",
        "size": [
          "v.particle_random_1 > 0.85 ? 0.58 : (v.particle_random_1 > 0.65 ? 0.46 : (v.particle_random_1 > 0.45 ? 0.33 : (v.particle_random_1 > 0.25 ? 0.22 : 0.77)))",
          "v.particle_random_1 > 0.85 ? 0.58 : (v.particle_random_1 > 0.65 ? 0.46 : (v.particle_random_1 > 0.45 ? 0.33 : (v.particle_random_1 > 0.25 ? 0.22 : 0.77)))"
        ],
        "uv": {
          "texture_height": 16,
          "texture_width": 64,
          "uv": [
            "math.floor(v.particle_random_1 * 4) * 16",
            0
          ],
          "uv_size": [16, 16]
        }
      },
      "minecraft:particle_appearance_tinting": {
        "color": {
          "gradient": {
            "0.0": [1.0, 1.0, 1.0, 0.0],
            "0.12": [1.0, 1.0, 1.0, "v.particle_random_2 * 0.28 + 0.28"], // more subtle fade-in
            "0.88": [1.0, 1.0, 1.0, "v.particle_random_2 * 0.28 + 0.28"], // softer fade-out
            "1.0": [1.0, 1.0, 1.0, 0.0]
          },
          "interpolant": "variable.particle_age / variable.particle_lifetime"
        }
      },
      "minecraft:particle_expire_if_in_blocks": [
        "minecraft:water",
        "minecraft:kelp",
        "minecraft:seagrass"
      ],
      "minecraft:particle_initial_spin": {
        "rotation": "math.random(0, 360)"
      },
      "minecraft:particle_initial_speed": [0.0, 0.0, 0.0],
      "minecraft:particle_lifetime_expression": {
        "max_lifetime": "math.random(45, 60)" // puddle lasts a bit longer
      },
      "minecraft:particle_motion_collision": {
        "coefficient_of_restitution": 0.0,
        "collision_drag": 0.6, // smoother stop
        "collision_radius": 0.01
      },
      "minecraft:particle_motion_dynamic": {
        "linear_acceleration": [0.0, -1.5, 0.0], // slower sink for gentle settling
        "linear_drag_coefficient": 0.05 // tiny drag for subtle motion
      }
    },
    "description": {
      "basic_render_parameters": {
        "material": "particles_blend",
        "texture": "textures/ps/pd"
      },
      "identifier": "rg:pool_particle"
    }
  }
}